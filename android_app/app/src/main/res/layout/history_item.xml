<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtStartAndFinishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtStartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_blue_grey_600_24dp" />

        <TextView
            android:id="@+id/txtEndLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_directions_blue_grey_600_24dp" />

        <RatingBar
            android:id="@+id/rbAveragrRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/star_color"
            android:indeterminateTint="@color/star_color"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/star_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá của tôi" />

            <Button
                android:id="@+id/btnYourRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá của người đi chung" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lnSeeRating"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <RatingBar
                android:id="@+id/rbRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/star_color"
                android:indeterminateTint="@color/star_color"
                android:isIndicator="true"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:numStars="5"
                android:progressTint="@color/star_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtComment" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>