<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtStartAndFinishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtStartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_blue_grey_600_24dp" />

        <TextView
            android:id="@+id/txtEndLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_directions_blue_grey_600_24dp" />
    </LinearLayout>
</LinearLayout>
        <RatingBar
            android:id="@+id/rbAveragrRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/star_color"
            android:indeterminateTint="@color/star_color"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/star_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:id="@+id/lnButtonRating"
            android:paddingBottom="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btnMyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Đánh giá của tôi" />

            <Button
                android:id="@+id/btnYourRating"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá của người đi chung" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lnSeeRating"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWhoRating"/>
            <RatingBar
                android:id="@+id/rbRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/star_color"
                android:indeterminateTint="@color/star_color"
                android:isIndicator="true"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:numStars="5"
                android:progressTint="@color/star_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:id="@+id/txtComment" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFailure"
                android:text="@string/no_rating"
                android:visibility="gone"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_margin="10dp"
    android:background="@color/color_line_field"/>
</LinearLayout>